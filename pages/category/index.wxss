page {
  color: var(--defaultColor);
  font-size: 28rpx;
  height: 100%;
}

page .cate-container {
  height: calc(100vh - 90rpx);
  display: flex;
}

page .cate-container .left-menu {
  height: 100%;
  flex: 2;
}

page .cate-container .left-menu .left-menu-item {
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}

page .cate-container .left-menu .left-menu-item.active {
  color: var(--theme);
  border-left: 5rpx solid currentColor;
  background-color: #fff;
}

page .cate-container .right-content {
  height: 100%;
  flex: 5;
}

page .cate-container .right-content .right-content-item .title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

page .cate-container .right-content .right-content-item .title .symbol {
  margin: 0 10rpx;
  color: #999;
}

page .cate-container .right-content .right-content-item .menu {
  display: flex;
  flex-wrap: wrap;
}

page .cate-container .right-content .right-content-item .menu navigator {
  width: 33.33%;
  text-align: center;
  margin-bottom: 20rpx;
}

page .cate-container .right-content .right-content-item .menu image {
  width: 50%;
}
