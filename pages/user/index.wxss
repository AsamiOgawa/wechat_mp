page {
  height: 100vh;
  background-color: #eeeeee;
}

.user-info {
  height: 45vh;
  position: relative;
}

.user-info .user-img-wrap {
  height: 100%;
  text-align: center;
  overflow: hidden;
  position: relative;
}

.user-info .user-img-wrap .user-bg {
  width: 71%;
  filter: blur(35rpx);
}

.user-info .user-img-wrap .user-info-content {
  width: 30%;
  height: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.user-info .user-img-wrap .user-info-content .user-avatar {
  border-radius: 50%;
  box-shadow: 0px 0px 3px #888;
  overflow: hidden;
}

.user-info .user-img-wrap .user-info-content .user-avatar image {
  width: 100%;
}

.user-info .user-img-wrap .user-info-content .user-nickname {
  color: #fff;
  font-size: 36rpx;
}

.user-info button {
  width: 28%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -70%);
}

.user-content {
  position: relative;
}

.user-content .main {
  width: 90%;
  padding-bottom: 24rpx;
  font-size: 28rpx;
  color: #888;
  position: absolute;
  top: -72rpx;
  left: 50%;
  transform: translateX(-50%);
}

.user-content .main .history-wrap {
  display: flex;
}

.user-content .main .history-wrap navigator {
  flex: 1;
  text-align: center;
  padding: var(--p14) 0;
  position: relative;
}

.user-content .main .history-wrap navigator .num {
  color: var(--theme);
  font-size: 32rpx;
}

.user-content .main .history-wrap navigator + navigator::before {
  content: '';
  display: block;
  width: 1rpx;
  height: 67rpx;
  border-left: 1rpx solid #888;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.user-content .main .order-wrap .order-title {
  padding: var(--p14);
  border-bottom: 4rpx solid #eeeeee;
}

.user-content .main .order-wrap .order-content {
  display: flex;
}

.user-content .main .order-wrap .order-content navigator {
  flex: 1;
  padding: var(--p14);
  text-align: center;
}

.user-content .main .order-wrap .order-content navigator .iconfont {
  font-size: 60rpx;
  color: var(--theme);
}

.user-content .main .address-wrap {
  height: 79rpx;
}

.user-content .main .address-wrap navigator {
  height: 100%;
  padding-left: var(--p14);
  line-height: 79rpx;
}

.user-content .main .contact-wrap .contact-content {
  display: flex;
  justify-content: space-between;
}

.user-content .main .contact-wrap > view {
  padding: 20rpx 0 20rpx 14rpx;
}

.user-content .main .contact-wrap > view + view {
  border-top: 4rpx solid #eeeeee;
}

.user-content .main .contact-wrap > view:first-child {
  padding-right: var(--p14);
}

.user-content .main .promote.wrap {
  background-color: #fff;
}

.user-content .main .promote.wrap navigator {
  padding: 20rpx;
}

.user-content .main .history-wrap,
.user-content .main .order-wrap,
.user-content .main .address-wrap,
.user-content .main .contact-wrap {
  background-color: #fff;
  margin-bottom: 18rpx;
}
