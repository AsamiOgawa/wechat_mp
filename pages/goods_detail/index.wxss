page {
  padding-bottom: 90rpx;
}

.goods-swiper swiper {
  height: 68vw;
}

.goods-swiper swiper swiper-item {
  height: 100%;
  text-align: center;
}

.goods-swiper swiper swiper-item image {
  width: 60%;
}

.goods-info {
  padding: 0 20rpx;
}

.goods-info .goods-price {
  color: var(--theme);
  font-size: 36rpx;
  font-weight: bold;
}

.goods-info .goods-row {
  display: flex;
  align-items: center;
  height: 150rpx;
  border-top: 5rpx solid #999;
  border-bottom: 5rpx solid #999;
}

.goods-info .goods-row .goods-title {
  flex: 5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-info .goods-row .goods-collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 74%;
  border-left: 2rpx solid #999;
  color: #999;
}

.goods-info .goods-row .goods-collect .iconfont {
  font-size: 56rpx;
}

.goods-info .goods-row .goods-collect .iconfont.collected {
  color: #ffa500;
  filter: blur(2rpx);
}

.goods-info .goods-row .goods-collect text {
  font-size: 28rpx;
}

.other-bottom {
  display: flex;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fafafa;
  width: 100%;
}

.other-bottom .bottom-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.other-bottom .bottom-item .iconfont {
  font-size: 48rpx;
}

.other-bottom .bottom-item view {
  color: #888;
  font-size: 22rpx;
}

.other-bottom .bottom-item .iconcallingrobort + view + button,
.other-bottom .bottom-item .iconshare + view + button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.other-bottom .bottom-item.btn-cart {
  flex: 2;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  background-color: #ffa500;
  flex-direction: row;
}

.other-bottom .bottom-item.btn-buy {
  flex: 2;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  background-color: red;
  flex-direction: row;
}
